@{
    ViewData["Title"] = "Home Page";
}

<
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-page {
            text-align: center;
        }

        .text-wrapper {
            font-family: "Inter-Regular", Helvetica;
            font-weight: 400;
            color: #000000;
            font-size: 30px;
            text-align: center;
            letter-spacing: 0;
            line-height: normal;
            text-decoration: underline;
        }

        .sport-pal {
            width: 100%; /* Adjust width as needed */
            height: auto; /* Maintain aspect ratio */
        }

        .login {
            margin-top: 20px; /* Adjust margin as needed */
        }

        .overlap {
            width: 100%; /* Adjust width as needed */
            height: 183px;
            background-color: #373434;
            border-radius: 67px;
            border: 1px solid;
            border-color: #000000;
            box-shadow: 0px 4px 4px #00000040;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .join-to-score-your {
            font-family: "Inter-BlackItalic", Helvetica;
            font-weight: 900;
            font-style: italic;
            color: #ffffff;
            font-size: 25px;
            text-align: center;
            letter-spacing: 0;
            line-height: normal;
        }

        .submit-button {
            margin-top: 20px; /* Adjust margin as needed */
        }

        .overlap-group {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-page .overlap-group {
            position: relative;
            width: 236px;
            height: 86px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .login-page .btn-submit {
            position: absolute;
            width: 225px;
            height: 86px;
            top: 0;
            left: 0;
            background-color: #ff6b00;
            border-radius: 39px;
            border: 1px solid;
            border-color: #000000;
            box-shadow: 0px 4px 4px #00000040;
            z-index: 1
        }

        .text-wrapper-2 {
            font-family: "Inter-BoldItalic", Helvetica;
            font-weight: 700;
            font-style: italic;
            color: white;
            font-size: 30px;
            text-align: center;
            letter-spacing: 0;
            line-height: normal;
            z-index: 2
        }
    </style>
</head>
<body>
    <div class="login-page">
        <div class="div">
            <p class="text-wrapper">Play Hard, Team Up Easily</p>
            <img class="sport-pal" src="@Url.Content("~/Img/sport-pal.png")" alt="My Image" />



            <div class="login">
                <div class="overlap">
                    <p class="join-to-score-your">Join&nbsp;&nbsp;to Score Your First Event!</p>
                    <div class="submit-button">
                        <div class="overlap-group">
                            <div class="btn-submit"></div>
                            <div class="text-wrapper-2" onclick="location.href = '@Url.Action("OauthRedirect", "Home")'"> Login With Google</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

<script src="~/js/Event/EventUtility.js" asp-append-version="true"></script>
<script src="~/js/UserUtility.js" asp-append-version="true"></script>


<script>
 // save sport info to db
    window.onload = function () {
        AddSportToDb();


    };
</script>
@{
    ViewData["Title"] = "Home Page";
}



<button class="btn btn-primary" style="margin-top: 20px;" onclick="location.href = '@Url.Action("OauthRedirect", "Home")'"> Sign In</button>
<button class="btn btn-primary" style="margin-top: 20px;" onclick="location.href = '@Url.Action("RefreshToken", "OAuth")'"> Refresh Token</button>
<button class="btn btn-primary" style="margin-top: 20px;" onclick="location.href = '@Url.Action("RevokeToken", "OAuth")'"> Revoke Access</button>
<iframe src="https://calendar.google.com/calendar/embed?height=600&wkst=1&bgcolor=%23AD1457&ctz=America%2FNew_York&src=YmM3NDk1OTMxZmRlMmJjZDIzNjYyZTBjNGI4MjhjMzE3Y2Q3NjY3YTM4YmQyOGNhZWM1ZjQ1YjMzZGEzYTMxM0Bncm91cC5jYWxlbmRhci5nb29nbGUuY29t&color=%23F6BF26" style="border:solid 1px #777" width="800" height="600" frameborder="0" scrolling="no"></iframe>
<div style="margin-top: 50px">
    <form method="post" action="CalendarEvent/CreateEvent">
        <div class="row" style="margin:10px;">
            <label for="Summary" class="col-sm-3">Summary:</label>
            <input type="text" class="col-sm-1 form-control" name="Summary" value="" autocomplete="off" />
        </div>
        <div class="row" style="margin:10px;">
            <label for="Description" class="col-sm-3">Description:</label>
            <input type="datetime" class="col-sm-1 form-control" name="Description" value="" autocomplete="off" />
        </div>
        <div class="row" style="margin:10px;">
            <label for="Start.DateTime" class="col-sm-3">Start Date Time:</label>
            <input type="datetime" class="col-sm-1 form-control" name="Start.DateTime" value="" autocomplete="off" />
        </div>
        <div class="row" style="margin:10px;">
            <label for="End.DateTime" class="col-sm-3">End Date Time:</label>
            <input type="datetime" class="col-sm-1 form-control" name="End.DateTime" value="" autocomplete="off" />
        </div>
        <div class="row" style="margin:10px;">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>
